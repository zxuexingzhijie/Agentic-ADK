        <dependency>
            <groupId>com.alibaba</groupId>
            <artifactId>alibaba-langengine-openai</artifactId>
            <version>1.2.0-SNAPSHOT</version>
        </dependency>

        <!-- opensearch vector start -->
        <dependency>
            <groupId>com.alibaba.search.swift</groupId>
            <artifactId>swift_client</artifactId>
            <version>1.3.2-7u</version>
        </dependency>
        <dependency>
            <groupId>com.aliyun</groupId>
            <artifactId>aliyun-sdk-ha3engine-vector</artifactId>
            <version>1.1.1</version>
        </dependency>
        <!-- opensearch vector end -->

        <!-- jdbc start -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-jdbc</artifactId>
            <version>3.3.4</version>
        </dependency>
        <!-- jdbc end -->

    </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-source-plugin</artifactId>
                <executions>
                    <execution>
                        <id>attach-sources</id>
                        <goals>
                            <goal>jar-no-fork</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <attach>true</attach>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <includes>
                        <include>com/alibaba/langengine/**/*.java</include>
                    </includes>
                    <systemPropertyVariables>
                        <user.timezone>Asia/Shanghai</user.timezone>
                    </systemPropertyVariables>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.moditect</groupId>
                <artifactId>moditect-maven-plugin</artifactId>
